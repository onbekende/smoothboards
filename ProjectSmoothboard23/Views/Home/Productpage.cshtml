@model ProjectSmoothboard23.Models.Product

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.prijs)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.prijs)
        </dd>
    </dl>
    <h2>Vul dit formulier in voor extra informatie</h2>
    <form asp-controller="Products" asp-action="Maildata">
        <input type="hidden" name="productid" value="@Model.productid" />
        <input type="hidden" name="productname" value="@Model.productname" />
        <div class="form-group">
            <label class="control-label">Naam</label>
            <input name="name" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Email</label>
            <input name="email" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label"></label>
            <input name="telnr" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Versturen" class="btn btn-primary" />
        </div>
    </form>
</div>
